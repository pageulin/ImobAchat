<?xml version="1.0" encoding="UTF-8" ?>
 
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
 
<tiles-definitions>

    <definition name="common" template="/WEB-INF/layouts/standard.jsp">
        <put-attribute name="include_header" value="/WEB-INF/layouts/include_header.jsp" />
        <put-attribute name="include_footer" value="/WEB-INF/layouts/include_footer.jsp" />
    </definition>

	<!-- LOGIN & REGISTRATION FILES -->
 	<definition name="login" extends="common">
        <put-attribute name="body" value="/WEB-INF/jsp/index.jsp" />   
    </definition>
    
    <!-- HOME'S FILES -->
    <definition name="index" extends="common">
        <put-attribute name="body" value="/WEB-INF/jsp/home.jsp"/>   
    </definition>
    
    <!-- ADMIN FILES -->
    <definition name="admin" extends="common">
        <put-attribute name="body" value="/WEB-INF/jsp/admin.jsp" />   
    </definition>
    
</tiles-definitions>